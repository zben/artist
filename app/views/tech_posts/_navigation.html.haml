%ul{:class=>"tabs",:"data-tabs"=>"tabs"}

  %li{:class=>is_active?('projects#overview')}
    =link_to "项目圈主页", project_overview_path

  %li{:class=>is_active?('project_searches#')}=link_to '创业项目', project_search_path
  %li{:class=>is_active?('park_searches#')}=link_to '创业园区', default_parks_path
  %li{:class=>is_active?('tech_post#')}=link_to '技术需求', default_tech_post_path

:javascript
  $(".dropdown-toggle").hover(
    function () {
      $(this).addClass('active');
      $(this).next(".dropdown-menu").show();
    }, 
    function () {
      $(this).removeClass('active');
      $(this).next(".dropdown-menu").hide();
    }
  );
  $(".dropdown-menu").hover(
    function () {
      $(this).show();
    }, 
    function () {
      $(this).hide();
    }
  );

