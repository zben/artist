.row
  .span16
    .user_sidebar.shadow
      =image_tag @user.avatar.url(:large)

    .user_mainbar.shadow
      %h1=@user.name
      .share_button
        =render 'shared/share_artist' if I18n.locale == :ch
      %p="#{@user.profile.full_location}"
      =t('profile.introduction')
      -if @user.profile.intro_ch.present?
        %p=@user.profile.intro_ch
      -else
        %p=@user.profile.intro

-if current_user == @user && @user.artworks.empty?
  .row
    .span15
      You don't have any artwork presented yet,
      =link_to "Start upload some artwork. It is easy and quick.", new_artwork_path

-content_for :widescreen do
  #image_blocks
    -@artworks.each do |a|
      =link_to a do
        .image_block
          =image_tag(a.photos.first.photo.url(:medium), width: 260)
          .title=a.title == "" ? "Untitled" : a.title
          .artist
            .name
              .image_footer="Submitted #{time_ago_in_words a.created_at} ago"
              =link_to "  Edit details", edit_artwork_path(a), class: "edit_artwork" if can_edit?(a)
