%tr
  %td= order.number
  %td= order.artwork.number
  %td
    =link_to image_tag(order.artwork.photos.first.photo.url(:thumb),width:25), order.artwork
    =order.artwork.title
    =order.is_for_real? ? "真品" : '授权限量版'
  %td=number_to_currency (order.payment || order.artwork.sale_price), unit: "¥", precision: 0
  %td=l order.created_at, format: :short
  %td=t(order.status.to_s)
  %td
    =link_to "取消", cancel_order_path(order.id) if order.status != :cancelled

