=semantic_form_for @search do |f|
  =f.inputs do
    .row 
      .span3
        %h3 搜索选项
        =f.input :keywords
        =submit_tag "搜索",:class=>'btn'
      %h4.span3 附加选项
      .span3=f.input :project_field_id, :as=>:select, :collection=>ProjectField.all
      .span3=f.input :province_id, :as=>:select, :collection=>Province.all
      .span3=f.input :co_type_cd, :as=>:select, :collection=>TechPost.co_types_for_select(:value)
      %br
      .span3=submit_tag "搜索",:class=>"btn"
